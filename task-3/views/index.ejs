<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Responsive Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to right, #e3f2fd, #bbdefb);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    header, footer {
      background-color: #0d47a1;
      color: white;
      text-align: center;
      padding: 15px;
    }
    .form-box {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      padding: 20px;
      margin: auto;
      width: 100%;
      max-width: 400px;
      transition: transform 0.3s ease;
    }
    .form-box:hover {
      transform: scale(1.02);
    }
    button {
      transition: background-color 0.3s ease;
    }
    button:hover {
      background-color: #1565c0 !important;
    }
  </style>
</head>
<body>
  <header>
    <h1>Welcome to the HomePage</h1>
  </header>

  <main class="container d-flex justify-content-center align-items-center flex-grow-1">
    <div class="form-box">
      <h2>User Details</h2>
      <form action="/submit" method="post" onsubmit="return validateForm()">
        <div class="mb-3">
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" required>
        </div>
        <div class="mb-3">
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required>
        </div>
        <div class="mb-3">
          <input type="number" id="age" name="age" class="form-control" placeholder="Enter Age" required>
        </div>
        <div class="mb-3">
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    </div>
  </main>

  <footer>
    <p>&copy; Cognifyz Technologies Internship Task</p>
  </footer>

  <script>
    function validateForm() {
      const age = parseInt(document.getElementById('age').value);
      const password = document.getElementById('password').value;

      if (age < 18) {
        alert('Age must be at least 18');
        return false;
      }
      if (password.length < 6) {
        alert('Password must be at least 6 characters long');
        return false;
      }
      return true;
    }
  </script>
</body>
</html>
