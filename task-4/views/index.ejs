<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Responsive Form</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to right, #e3f2fd, #bbdefb);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    header, footer {
      background-color: #0d47a1;
      color: white;
      text-align: center;
      padding: 15px;
    }
    .form-box {
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      padding: 20px;
      margin: auto;
      width: 100%;
      max-width: 400px;
      transition: transform 0.3s ease;
    }
    .form-box:hover {
      transform: scale(1.02);
    }
    .error {
      color: red;
      font-size: 12px;
      text-align: left;
    }
    .strength-bar {
      background: #ddd;
      width: 100%;
      height: 8px;
      border-radius: 4px;
      margin-top: 5px;
    }
    .strength-fill {
      height: 8px;
      width: 0;
      border-radius: 4px;
    }
    button {
      transition: background-color 0.3s ease;
    }
    button:hover {
      background-color: #1565c0 !important;
    }
  </style>
</head>
<body>
  <header>
    <h1>Welcome to the HomePage</h1>
  </header>

  <main class="container d-flex justify-content-center align-items-center flex-grow-1">
    <div class="form-box">
      <h2>User Details</h2>
      <form id="userForm" action="/submit" method="post">
        <div class="mb-3">
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" required>
          <small id="nameError" class="error"></small>
        </div>
        <div class="mb-3">
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required>
          <small id="emailError" class="error"></small>
        </div>
        <div class="mb-3">
          <input type="number" id="age" name="age" class="form-control" placeholder="Enter Age" required>
          <small id="ageError" class="error"></small>
        </div>
        <div class="mb-3">
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
          <small id="passwordError" class="error"></small>
          <div class="strength-bar">
            <div id="strengthBar" class="strength-fill"></div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    </div>
  </main>

  <footer>
    <p>&copy; Cognifyz Technologies Internship Task</p>
  </footer>

  <script>
    document.getElementById("userForm").addEventListener("submit", function(e){
      let valid = true;

      const age = parseInt(document.getElementById('age').value);
      const password = document.getElementById('password').value;

      // Age validation
      if(age < 18){
        document.getElementById('ageError').innerText = 'Age must be at least 18';
        valid = false;
      } else {
        document.getElementById('ageError').innerText = '';
      }

      // Password validation
      const strongPassword = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&]).{6,}$/;
      if(!strongPassword.test(password)){
        document.getElementById('passwordError').innerText = 
          'Password must contain uppercase, lowercase, number, and special character.';
        valid = false;
      } else {
        document.getElementById('passwordError').innerText = '';
      }

      if(!valid) e.preventDefault();
    });
    
    // Password strength bar live update
    document.getElementById("password").addEventListener("input", function(){
      const strengthBar = document.getElementById("strengthBar");
      const password = this.value;

      let strength = 0;
      if(password.match(/[A-Z]/)) strength++;
      if(password.match(/[0-9]/)) strength++;
      if(password.match(/[@$!%*?&]/)) strength++;
      if(password.length >= 6) strength++;

      strengthBar.style.width = (strength * 25) + "%";
      strengthBar.style.background = strength < 2 ? "red" : strength < 3 ? "orange" : "green";
    });
  </script>
</body>
</html>
